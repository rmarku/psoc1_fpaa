include "m8c.inc"

;--------------------------------------------------
; Constants for SPI API's.
;--------------------------------------------------
;mask value for global int reg bit for TX instance
SPI_bINT_MASK:                         equ 04h
;SPIS interrupt address
SPI_INT_REG:                           equ 0e1h
SPI_SW_SS_Feature:                     equ  1

; Old equate, will be removed in future release, Do not use.
bSPI_INT_MASK:             equ 04h

;-------------------------------
; SPI Configuration definitions
;-------------------------------
SPI_SPIS_MODE_0:             equ   00h      ;MODE 0 - Leading edge latches data - pos clock
SPI_SPIS_MODE_1:             equ   02h      ;MODE 1 - Leading edge latches data - neg clock
SPI_SPIS_MODE_2:             equ   04h      ;MODE 2 - Trailing edge latches data - pos clock
SPI_SPIS_MODE_3:             equ   06h      ;MODE 3 - Trailing edge latches data - neg clock
SPI_SPIS_LSB_FIRST:          equ   80h      ;LSB bit transmitted/received first
SPI_SPIS_MSB_FIRST:          equ   00h      ;MSB bit transmitted/received first
SPI_SPIS_SLAVE_SELECT:       equ   08h  ; SS Control bit

;---------------------------
; SPI Status register masks
;---------------------------
SPI_SPIS_RX_OVERRUN_ERROR:   equ   40h      ;Overrun error in received data
SPI_SPIS_TX_BUFFER_EMPTY:    equ   10h      ;TX Buffer register is ready for next data byte
SPI_SPIS_RX_BUFFER_FULL:     equ   08h      ;RX Buffer register has received current data
SPI_SPIS_SPI_COMPLETE:       equ   20h      ;SPI Tx/Rx cycle has completed

;--------------------------------------------------
; Register Address Constants for SPI
;--------------------------------------------------
SPI_CONTROL_REG:    equ 2bh                      ;Control register
SPI_SHIFT_REG:  equ 28h                          ;TX Shift Register register
SPI_TX_BUFFER_REG:  equ 29h                      ;TX Buffer Register
SPI_RX_BUFFER_REG:  equ 2ah                      ;RX Buffer Register
SPI_FUNCTION_REG:   equ 28h                      ;Function register
SPI_INPUT_REG:  equ 29h                          ;Input register
SPI_OUTPUT_REG: equ 2ah                          ;Output register

